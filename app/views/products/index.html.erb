<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th></th>
  </tr>
  <% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.description %></td>
    <td><%= product.price %></td>
    <td>
      <%= link_to 'Delete', product_path(product), method: :delete, class: 'icon-delete' %>
    </td>
  </tr>
  <% end %>
</table>

<%= link_to 'Create a product', new_product_path %>
